<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/divido/credit-request" method="GET">
        <service class="Divido\DividoFinancing\Api\CreditRequestInterface" method="create"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/divido/update" method="POST">
        <service class="Divido\DividoFinancing\Api\CreditRequestInterface" method="update"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/divido/version" method="GET">
        <service class="Divido\DividoFinancing\Api\CreditRequestInterface" method="version"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
